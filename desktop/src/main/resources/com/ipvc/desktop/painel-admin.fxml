<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ipvc.desktop.controller.PainelAdminController"
      spacing="20" alignment="TOP_CENTER" prefWidth="1000" prefHeight="650"
      styleClass="root-container">

    <!-- Cabeçalho -->
    <HBox alignment="CENTER" spacing="10" styleClass="header">
        <Label text="Painel de Administração" styleClass="header-label"/>
        <Button text="Logout" onAction="#onLogout" styleClass="logout-button"/>
    </HBox>

    <!-- Área Principal (Menu + Conteúdo) -->
    <HBox styleClass="main-container" spacing="0" prefHeight="650">
        <!-- Menu Lateral -->
        <VBox spacing="10" alignment="TOP_LEFT" styleClass="sidebar" prefWidth="400">
            <Button text="Dashboard" styleClass="menu-item"/>
            <Button text="Gestão de Utilizadores" styleClass="menu-item" onAction="#abrirGestaoUtilizadores"/>
            <Button text="Encomendas Clientes" styleClass="menu-item"/>
            <Button text="Encomendas Fornecedores" styleClass="menu-item"/>
            <Button text="Gestão de Materiais" styleClass="menu-item"/>
            <Button text="Gestão de Funcionários" styleClass="menu-item"/>
            <Button text="Histórico de Eventos" styleClass="menu-item"/>
        </VBox>

        <!-- Conteúdo Principal (que ocupa o restante da tela) -->
        <StackPane fx:id="contentPane" alignment="TOP_RIGHT" styleClass="content-pane" HBox.hgrow="ALWAYS">
            <!-- O conteúdo será carregado dinamicamente aqui -->
        </StackPane>
    </HBox>

</VBox>
