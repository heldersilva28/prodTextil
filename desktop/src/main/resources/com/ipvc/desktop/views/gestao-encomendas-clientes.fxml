<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ipvc.desktop.controller.GestaoEncomendasClientesController" styleClass="pagina-encomendas-clientes">
    <VBox fx:id="vbox" styleClass="pagina-encomendas-clientes">
        <!-- Título -->
        <Label text="Gestão de Encomendas de Clientes" styleClass="titulo-principal"/>

        <!-- Barra de Ações -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Nova Encomenda" onAction="#abrirFormularioNova"/>
            <Button text="Editar Encomenda" onAction="#editarEncomendaSelecionada"/>
            <Button text="Apagar Encomenda" onAction="#apagarEncomendaSelecionada"/>
        </HBox>

        <!-- Tabela de Encomendas com Scroll -->
        <ScrollPane styleClass="scroll-tabela" fitToWidth="true">
            <TableView fx:id="tabelaEncomendas" prefHeight="600" styleClass="tabela-encomendas">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200"/>
                    <TableColumn fx:id="colData" text="Data Encomenda" prefWidth="150"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="150"/>
                    <TableColumn fx:id="colValorTotal" text="Valor Total (€)" prefWidth="150"/>
                </columns>
            </TableView>
        </ScrollPane>
    </VBox>
</AnchorPane>
