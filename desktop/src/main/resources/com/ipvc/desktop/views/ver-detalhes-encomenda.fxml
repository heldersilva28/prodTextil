<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ipvc.desktop.controller.VerDetalhesEncomendaController">
    <VBox spacing="20" padding="20" prefWidth="400" prefHeight="400" styleClass="detalhes-container">

        <Label text="Detalhes da Encomenda" styleClass="titulo-principal"/>

        <GridPane hgap="10" vgap="10">
            <Label text="ID Encomenda:"/>
            <Label fx:id="labelIdEncomenda"/>

            <Label text="Cliente:" GridPane.rowIndex="1"/>
            <Label fx:id="labelCliente" GridPane.rowIndex="1"/>

            <Label text="Data da Encomenda:" GridPane.rowIndex="2"/>
            <Label fx:id="labelData" GridPane.rowIndex="2"/>

            <Label text="Estado:" GridPane.rowIndex="3"/>
            <Label fx:id="labelEstado" GridPane.rowIndex="3"/>

            <Label text="Valor Total:" GridPane.rowIndex="4"/>
            <Label fx:id="labelValorTotal" GridPane.rowIndex="4"/>
        </GridPane>

        <Button text="Fechar" onAction="#fechar" maxWidth="Infinity"/>

    </VBox>
</AnchorPane>
