<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ipvc.desktop.controller.ConfirmacaoController">
    <VBox spacing="20" alignment="CENTER" padding="20">
        <Label fx:id="labelMensagem" text="Tem a certeza que pretende eliminar?" wrapText="true" styleClass="titulo-principal"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancelar" onAction="#cancelar"/>
            <Button text="Confirmar" onAction="#confirmar" styleClass="botao-confirmar"/>
        </HBox>
    </VBox>
</AnchorPane>
