<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ipvc.desktop.controller.RegistoController"
      spacing="20" alignment="CENTER" prefWidth="400" prefHeight="400"
      style="-fx-background-color: #fafafa; -fx-padding: 40; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">

    <Label text="Create a New Account" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    <TextField fx:id="nomeField" promptText="Username"
               style="-fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 12; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 3);"/>
    <TextField fx:id="emailField" promptText="Email"
               style="-fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 12; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 3);"/>
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 12; -fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 3);"/>
    <Button text="Register" onAction="#criarUtilizador"
            style="-fx-font-size: 18px; -fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 12 30; -fx-background-radius: 20; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0, 0, 4);"/>
</VBox>
